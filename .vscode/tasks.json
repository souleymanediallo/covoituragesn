{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "docker-build",
      "label": "docker-build",
      "platform": "python",
      "dockerBuild": {
        "tag": "covoiturage:latest",
        "dockerfile": "${workspaceFolder}/Dockerfile",
        "context": "${workspaceFolder}",
        "pull": true
      }
    },
    {
      "type": "docker-run",
      "label": "docker-run: debug",
      "dependsOn": ["docker-build"],
      "dockerRun": {
        "env": {
          "FLASK_APP": "app.py",
          "FLASK_ENV": "development",
          "FLASK_DEBUG": "1"
        },
        "volumes": [
            {
                "localPath": "${workspaceFolder}",
                "containerPath": "/app"
            }
            ],
      },
      "python": {
        "args": [
          "run",
          "--host",
          "0.0.0.0",
          "--port",
          "5000"
        ],
        "module": "flask"
      }
    }
  ]
}
